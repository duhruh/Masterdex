<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/indexr"
    android:gravity="left"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/topBarLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:src="@drawable/bar_nor" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:src="@drawable/battle" />

        <TableLayout
            android:id="@+id/evolvesTable"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="40dp"
            android:scaleType="fitStart" >

            <TableRow
                android:layout_width="match_parent"
                android:baselineAligned="false" >

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView2"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="left"
                    android:text="Evolves From:"
                    android:textColor="#000"
                    android:textSize="5pt" />

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_alignLeft="@+id/imageView2"
                    android:layout_alignTop="@+id/textView2"
                    android:layout_gravity="left"
                    android:src="@drawable/small_na" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="-1dp"
                android:layout_marginTop="-2dp" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/imageView2"
                    android:layout_gravity="left"
                    android:text="Evolves To:"
                    android:textColor="#000"
                    android:textSize="5pt" />

            </TableRow>
        </TableLayout>

        <RelativeLayout
            android:id="@+id/pokemonNameInfo"
            android:layout_width="160dp"
            android:layout_height="42dp" >

            <TextView
                android:id="@+id/pokemon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="Bulbasaur"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000" />

            <TextView
                android:id="@+id/pronunce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="3dp"
                android:text="(BUL-buh-saur)"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000"
                android:textSize="4pt" />
        </RelativeLayout>

        <TableRow
            android:id="@+id/eeveeRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/pokemonNameInfo"
            android:layout_alignLeft="@+id/evolvesTable" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/small_vaporeon" />

            <ImageView
                android:id="@+id/ImageView05"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/small_jolteon" />

            <ImageView
                android:id="@+id/ImageView04"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/small_flareon" />

            <ImageView
                android:id="@+id/ImageView03"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/small_espeon" />

            <ImageView
                android:id="@+id/ImageView02"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/small_umbreon" />

            <ImageView
                android:id="@+id/ImageView07"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/small_leafeon" />

            <ImageView
                android:id="@+id/ImageView08"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/small_glaceon" />
        </TableRow>

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="441dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="441dp" >

            <RelativeLayout
                android:id="@+id/topSection"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="29dp" >

                <FrameLayout
                    android:id="@+id/frame"
                    android:layout_width="160dp"
                    android:layout_height="200dp" >

                    <ImageView
                        android:id="@+id/wheel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />

                    <ImageView
                        android:id="@+id/thumb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/thumb_bulbasaur" />

                </FrameLayout>

                <TableLayout
                    android:id="@+id/pokeData"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="10dp" >

                    <TableRow
                        android:id="@+id/typeRow"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/typetag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Type:"
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textColor="#000" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/speciesRow"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/speciestag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Species:"
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/species"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textColor="#000" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/heightRow"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/heighttag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Height:"
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/height"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textColor="#000" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/weightRow"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/weighttag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Weight:"
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/weight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textColor="#000" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/abilRow"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/abiltag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Abilities:"
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/ability"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textColor="#000" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/weakRow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/weaktag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Weakness:"
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/weakness"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textColor="#000" />
                    </TableRow>
                </TableLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/statsSection"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/topSection"
                android:layout_marginTop="55dp" >

                <TableLayout
                    android:id="@+id/statsLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp" >

                    <TableRow
                        android:id="@+id/hpRow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/hptag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HP:"
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/hp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HP:"
                            android:textColor="#000" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/attackRow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/attacktag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Attack:"
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/attack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HP:"
                            android:textColor="#000" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/defenseRow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/defensetag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Defense:"
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/defense"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HP:"
                            android:textColor="#000" />
                    </TableRow>
                </TableLayout>

                <TableLayout
                    android:id="@+id/statsRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="30dp" >

                    <TableRow
                        android:id="@+id/specialatkRow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/specialatktag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Special Attack:"
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/specialatk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HP:"
                            android:textColor="#000" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/specialdefRow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/specialdeftag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Special Defense:"
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/specialdef"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HP:"
                            android:textColor="#000" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/speedrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/speedtag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Speed:"
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/speed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HP:"
                            android:textColor="#000" />
                    </TableRow>
                </TableLayout>

                <TableLayout
                    android:id="@+id/statTotalTable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/statsLeft"
                    android:layout_alignParentBottom="true" >

                    <TableRow
                        android:id="@+id/stattotalRow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/stattotaltag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Stat Total:"
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/stattotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textColor="#000" />
                    </TableRow>
                </TableLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="38dp" >

                <TextView
                    android:id="@+id/bio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Large Text"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#000" />
            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>